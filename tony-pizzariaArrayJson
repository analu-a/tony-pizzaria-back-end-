var tony_pizzaria = require ('./tony-pizzaria')

//adicionar buscas por nome
const getUsuariosNome = function(){
    let usuarioJson = {}
    let arrayUsuario = []

    tony_pizzaria.usuario.informacoes.forEach(function(nome){

        arrayUsuario.push(nome.nome)

    })

    usuarioJson.nome = arrayUsuario
    console.log(usuarioJson)
}

// getUsuariosNome()

const getUserInfo = function(){
    let userJson = {}
    let arrayUser = []

    tony_pizzaria.usuario.informacoes.forEach(function(info){

        userJson.nome = info.nome
        userJson.email = info.email
     
        arrayUser.push(userJson)

    })

    userJson.info = arrayUser
    console.log(userJson)
}

getUserInfo()



const getPizzaInformacoes = function(saborEscolhido){
    let sabor = saborEscolhido
    let infoPizzaJSON = {}
    let status = false
    tony_pizzaria.produtos.pizza.forEach(function(pizza){

        if(pizza.sabor.includes(sabor)){

            infoPizzaJSON.sabor = sabor.sabor
            infoPizzaJSON.preco = sabor.preco
            infoPizzaJSON.descricao = sabor.descricao
            infoPizzaJSON.imagem = sabor.imagem
            infoPizzaJSON.categoria = sabor.categoria
            status = true
        }
    })

    if(status){
        return infoPizzaJSON
    } else{
        return false
    }
}
 getPizzaInformacoes('Queijo e tomate')


const getProdutos = function(){
    let produtosJson = {}
    let arrayProdutos = []

    tony_pizzaria.produtos.forEach(function(produtos){

        arrayProdutos.push(produtos.produtos)

    })
    produtosJson.produtos = arrayProdutos
    console.log(produtosJson)
}
// getProdutos()

